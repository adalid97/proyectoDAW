<div class="mx-auto mb-2">
	<div class="view" style="background-image: url('../../images/fondo.png');">
		<div class="row" style="width:100%; height:100%;">
			<div class="col-6 col-6 mt-3"><img class="rounded mx-auto d-block visible-lg visible-lg" src='{{ asset('../../equipos/' ~ partidos.idEquipoLocal.escudo) }}' width"300px" height="300px" alt="imagen" style="width:300px; height:300px;"></div>

			<div class="col-6 col-6 mt-3"><img class="rounded mx-auto d-block visible-lg visible-md" src='{{ asset('../../equipos/' ~ partidos.idEquipoVisitante.escudo) }}' width"300px" height="300px" alt="imagen" style="width:300px; height:300px;"></div>

		</div>

		<div class="card-body text-center">
			<h4 class="card-title white-text">{{partidos.idEquipoLocal.nombre}}
				-
				{{partidos.idEquipoVisitante.nombre}}</h4>
			<h6 class="white-text">Estadio
				{{partidos.estadio}}
				~
				{{partidos.fecha|date("d/m/Y")}}
				|
				{{partidos.hora|date('H:i')}}
				horas</h6>
			<p class="white-text">Hora de Apertura Sede:
				{{partidos.horaAperturaSede|date("H:i")}}
				horas</p>
		</div>
	</div>
	{% if is_granted('ROLE_ADMIN') %}
		<a class="btn btn-dark-green btn-md mx-0 btn-rounded text-white mx-auto d-block" href="{{ path('borrarPartido', {'id': partidos.id}) }}" onclick="return confirm('¿Estás seguro de que deseas borrar este partido?')">
			<i class="far fa-trash-alt"></i>
			Borrar Partido</a><br>
	{% endif %}
</br></div>
