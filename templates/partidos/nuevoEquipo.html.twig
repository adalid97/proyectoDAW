{% extends 'areaPrivada/baseAreaPrivada.html.twig' %}
{% block title %}Partido
{% endblock %}
{% block sidebar %}
	{{ render(path('menuAreaPrivada', {'seccionActual': "partidos"})) }}
{% endblock %}

{% block body %}
	<div class="container my-5">
		<section class="text-center dark-green-text mb-5">

			<div class="card">
				<div class="card-body rounded-top border border-success p-5">
					{{ form_start(form) }}
					<div class="form-group row">
						{{ form_label(form.nombre, 'Nombre', {'label_attr': {'class': 'col-sm-2 col-form-labe'}}) }}
						<div class="col-sm-10">
							{{ form_widget(form.nombre) }}
						</div>
					</div>
					<div class="form-group row">
						{{ form_label(form.escudo, 'Escudo', {'label_attr': {'class': 'col-sm-2 col-form-labe'}}) }}
						<div class="col-sm-10">
							{{ form_widget(form.escudo) }}
						</div>
					</div>
					<div class="text-center">
						{{ form_widget(form.save, {'attr': {'class': 'btn btn-dark-green btn-block my-4 text-white'}}) }}
					</div>
				</div>
				{{ form_end(form) }}
			</div>
		</section>
	</div>
{% endblock %}
