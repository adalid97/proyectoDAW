{% extends 'areaPrivada/baseAreaPrivada.html.twig' %}
{% block title %}Socios
{% endblock %}
{% block sidebar %}
	{{ render(path('menuAreaPrivada', {'seccionActual': "socios"})) }}
{% endblock %}
{% block body %}
	<div class="mt-3">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="alert alert-danger">
				{{ message }}
			</div>
		{% endfor %}
	</div>
	<a class="btn btn-dark-green btn-md mx-0 btn-rounded text-white mx-auto d-block" href="{{ path('nuevoSocio') }}">
		<i class="far fa-plus-square"></i>
		Nuevo Socio</a>
	<br>
	<div class="table-responsive">
		<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th class="th-sm">Numero Socio
					</th>
					<th class="th-sm">Nombre
					</th>
					<th class="th-sm">DNI
					</th>
					<th class="th-sm">Fecha Nacimiento
					</th>
					<th class="th-sm">Direccion
					</th>
					<th class="th-sm">Teléfono
					</th>
					<th class="th-sm">Cuotas
					</th>
					<th class="th-sm">Datos
					</th>
					<th class="th-sm">Borrar
					</th>
				</tr>
			</thead>
			<tbody>
				{% for socio in socios %}
					<tr>
						<td class="align-middle text-center">{{socio.numSocio}}</td>
						<td class="align-middle">{{socio.nombre}}</td>
						<td class="align-middle">{{socio.dni}}</td>
						<td class="align-middle">{{socio.fechaNacimiento|date("d/m/Y")}}</td>
						<td class="align-middle">{{socio.direccion}}</td>
						<td class="align-middle">{{socio.telefono}}</td>
						<td>
							<a class="btn btn-dark-green btn-md mx-0 btn-rounded text-white mx-auto d-block" href="{{ path('verCuota', {'idSocio': socio.id}) }}">
								<i class="far fa-calendar-check"></i>
								Cuotas</a>
						</td>
						<td>
							<a class="btn btn-dark-green btn-md mx-0 btn-rounded text-white mx-auto d-block" href="{{ path('editarSocioAdmin', {'id': socio.id}) }}">
								<i class="far fa-edit"></i>
								Editar</a>
						</td>
						<td>
							<a class="btn btn-dark-green btn-md mx-0 btn-rounded text-white mx-auto d-block" href="{{ path('borrarSocio', {'id': socio.id}) }}" onclick="return confirm('¿Estás seguro de que deseas borrar este socio?')">
								<i class="far fa-trash-alt fa-1x"></i>
								Borrar
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<a class="btn btn-dark-green btn-md mx-0 btn-rounded text-white mx-auto d-block" href="{{ path('nuevoAño') }}">Nuevo Año Completo</a>
{% endblock %}
