{% extends 'areaPrivada/baseAreaPrivada.html.twig' %}
{% block title %}Socios
{% endblock %}
{% block sidebar %}
	{{ render(path('menuAreaPrivada', {'seccionActual': "socios"})) }}
{% endblock %}
{% block body %}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	<a class="btn btn-dark-green btn-md mx-0 btn-rounded text-white mx-auto d-block" href="{{ path('nuevoSocio') }}">Nuevo Socio</a>
	<br>
	<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
		<thead>
			<tr>
				<th class="th-sm">Numero Socio
				</th>
				<th class="th-sm">Nombre
				</th>
				<th class="th-sm">DNI
				</th>
				<th class="th-sm">Fecha Nacimiento
				</th>
				<th class="th-sm">Direccion
				</th>
				<th class="th-sm">Localidad
				</th>
				<th class="th-sm">Tel√©fono
				</th>
				<th class="th-sm">Cuotas
				</th>
				<th class="th-sm">Datos
				</th>
			</tr>
		</thead>
		<tbody>
			{% for socio in socios %}
				<tr>
					<td>{{socio.numSocio}}</td>
					<td>{{socio.nombre}}</td>
					<td>{{socio.dni}}</td>
					<td>{{socio.fechaNacimiento|date("d/m/Y")}}</td>
					<td>{{socio.direccion}}</td>
					<td>{{socio.localidad}}</td>
					<td>{{socio.telefono}}</td>
					<td>
						<a class="btn btn-dark-green btn-md mx-0 btn-rounded text-white mx-auto d-block" href="{{ path('verCuota', {'idSocio': socio.id}) }}">Cuotas</a>
					</td>
					<td>
						<a class="btn btn-dark-green btn-md mx-0 btn-rounded text-white mx-auto d-block" href="{{ path('editarSocioAdmin', {'id': socio.id}) }}">Editar Datos</a>
					</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>

{% endblock %}
