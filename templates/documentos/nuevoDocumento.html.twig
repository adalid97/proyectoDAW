{% extends 'areaPrivada/baseAreaPrivada.html.twig' %}
{% block title %}Documento
{% endblock %}
{% block sidebar %}
	{{ render(path('menuAreaPrivada', {'seccionActual': "documentos"})) }}
{% endblock %}

{% block body %}
	<div class="container my-5">
		<section class="text-center border-top dark-green-text mb-5">

			<div class="card">
				<div class="card-body rounded-top border border-success p-5">
					{{ form_start(form) }}

					<div class="row">
						<div class="col-md-12 mb-4">
							{{ form_widget(form.nombre, {'attr': {'placeholder': 'Nombre'}}) }}
						</div>
						<div class="col-md-12 mb-4">
							{{ form_widget(form.descripcion, {'attr': {'placeholder': 'Descripci√≥n'}}) }}
						</div>
						<div class="col-md-12 mb-4">
							{{ form_widget(form.fichero, {'attr': {'placeholder': 'Fichero'}}) }}
						</div>
						<div class="col-md-12 mb-4">
							{{ form_widget(form.privado, {'attr': {'placeholder': 'Privado'}}) }}
						</div>
					</div>
					<div class="text-center">
						{{ form_widget(form.save, {'attr': {'class': 'btn btn-dark-green btn-block my-4 text-white'}}) }}
					</div>

				</div>
				{{ form_end(form) }}
			</div>
		</section>
	</div>
{% endblock %}
